    <link rel="stylesheet" href="assets/css/nice-select.css">
    <link rel="stylesheet" href="assets/css/style.css">

    <!-- Original Inline Styles -->
    <style>
        .header-area {
            background: #fff;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        #navigation {
            list-style: none;
            display: flex;
            padding: 0;
            margin: 0;
            align-items: center;
            gap: 20px;
        }

        #navigation > li {
            position: relative;
        }

        #navigation > li > a {
            display: block;
            padding: 10px 0;
            color: black;
            text-decoration: none;
            font-weight: 500;
        }

        #navigation .sign-in-container {
            margin-left: 120px;
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .dropdown {
            position: relative;
        }

        .sign-in-link {
            color: black;
            text-decoration: none;
            padding: 8px 20px;
            transition: all 0.3s ease;
            border-radius: 4px;
            display: inline-block;
            white-space: nowrap;
        }

        .dropdown .sign-in-link {
            padding: 8px 20px;
        }

        .dropdown-content {
            position: absolute;
            right: 0;
            top: 100%;
            background-color: white;
            min-width: 180px;
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
            border-radius: 4px;
            display: none;
            z-index: 1000;
        }

        .dropdown-content a {
            padding: 12px 16px;
            display: block;
            color: black;
            text-decoration: none;
        }

        .dropdown-content a:hover {
            background-color: #f1f1f1;
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .header-right1 {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .search ul {
            display: flex;
            align-items: center;
            gap: 20px;
            margin: 0;
            padding: 0;
            list-style: none;
        }

        .wishlist-stor, .card-stor {
            position: relative;
            cursor: pointer;
            display: flex;
            align-items: center;
        }

        .wishlist-stor a, .card-stor a {
            color: #000;
            font-size: 24px;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
        }

        .card-stor img {
            width: 24px;
            height: 24px;
            object-fit: contain;
        }

        .wishlist-stor:hover a, .card-stor:hover a {
            color: #ff4b6e;
        }

        .wishlist-stor i {
            transition: transform 0.3s ease;
        }

        .wishlist-stor:hover i {
            transform: scale(1.1);
        }

        .wishlist-count, #cartCount, #wishlistCountDesktop, #cartCountDesktop {
            position: absolute;
            top: -8px;
            right: -8px;
            background-color: #ff4b6e;
            color: white;
            border-radius: 50%;
            width: 18px;
            height: 18px;
            font-size: 11px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .menu-wrapper {
            padding: 15px 0;
        }

        .navbar-toggler {
            border: none;
            padding: 5px;
            margin-left: 10px;
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba(0, 0, 0, 0.8)' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
        }

        @media (min-width: 992px) {
            .header-left {
                flex-grow: 1;
                display: flex;
                align-items: center;
                gap: 40px;
            }

            .header-right1 {
                margin-left: 30px;
            }

            .navbar-nav {
                align-items: center;
            }
        }

        @media (max-width: 991px) {
            .menu-wrapper {
                flex-direction: row;
                justify-content: space-between;
                align-items: center;
            }

            #navigation {
                flex-direction: column;
                align-items: start;
                text-align: left;
                width: 100%;
                gap: 10px;
            }

            #navigation > li {
                margin-right: 0;
                margin-bottom: 10px;
                width: 100%;
            }

            #navigation .sign-in-container {
                margin: 10px 0;
                justify-content: start;
                width: 100%;
                gap: 15px;
                flex-direction: column;
            }

            .dropdown {
                margin-left: 0;
                width: 100%;
            }

            .dropdown-content {
                position: static;
                width: 100%;
                box-shadow: none;
                border-top: 1px solid #eee;
                border-bottom: 1px solid #eee;
                padding-left: 15px;
            }

            .header-right1 {
                margin-left: 0;
                gap: 15px;
            }

            .search ul {
                gap: 15px;
            }

            .navbar-collapse {
                background: #fff;
                padding: 15px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }

            .navbar-collapse:not(.show) {
                display: none;
            }

            .logo img {
                max-width: 150px;
            }

            .navbar-top {
                display: flex;
                align-items: center;
                justify-content: space-between;
                width: 100%;
            }
        }

        @media (max-width: 576px) {
            .sign-in-container {
                gap: 10px;
            }

            .sign-in-link {
                padding: 8px 15px;
                font-size: 14px;
            }

            .search ul, .header-right1 {
                gap: 10px;
            }

            .wishlist-stor a, .card-stor a {
                font-size: 20px;
            }

            .wishlist-count, #cartCount, #wishlistCountDesktop, #cartCountDesktop {
                width: 16px;
                height: 16px;
                font-size: 10px;
            }

            .logo img {
                max-width: 120px;
            }
        }
    </style>
</head>
<body class="full-wrapper">
    <!-- Original Header -->
    <header>
        <div class="header-area">
            <div class="main-header header-sticky">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <div class="container-fluid">
                        <div class="navbar-top">
                            <div class="logo">
                                <a href="/">
                                    <img src="/assets/img/logo/logo-removebg-preview.png" alt="" width="200px">
                                </a>
                            </div>
                            <div class="header-right1 d-lg-none">
                                <div class="search d-md-block">
                                    <ul class="d-flex align-items-center">
                                        <li>
                                            <div class="wishlist-stor">
                                                <a href="/wishlist">
                                                    <i class="ti-heart"></i>
                                                    <span id="wishlistCount" class="wishlist-count">0</span>
                                                </a>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="card-stor">
                                                <a href="/cart">
                                                    <img src="/assets/img/gallery/card.svg" alt="">
                                                    <span id="cartCount">0</span>
                                                </a>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <button class="navbar-toggler" type="button" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                        </div>

                        <div class="collapse navbar-collapse" id="navbarContent">
                            <div class="menu-wrapper d-flex align-items-center justify-content-between w-100">
                                <div class="header-left d-flex align-items-center">
                                    <div class="main-menu">
                                        <nav>
                                            <ul id="navigation" class="navbar-nav">
                                                <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                                                <li class="nav-item"><a class="nav-link" href="/shop">Shop</a></li>
                                                <li class="nav-item"><a class="nav-link" href="/getContactPage">Contact</a></li>
                                                <% if (locals && locals.name) { %>
                                                    <li class="nav-item dropdown">
                                                        <a href="#" class="sign-in-link nav-link"><%= locals.name %></a>
                                                        <div class="dropdown-content">
                                                            <a href="/profile">Profile</a>
                                                            <a href="#" id="logoutBtn">Logout</a>
                                                        </div>
                                                    </li>
                                                <% } else { %>
                                                    <li class="nav-item sign-in-container">
                                                        <a href="/signup" class="sign-in-link">Sign Up</a>
                                                        <a href="/login" class="sign-in-link">Login</a>
                                                    </li>
                                                <% } %>
                                            </ul>
                                        </nav>
                                    </div>
                                </div>
                                <div class="header-right1 d-none d-lg-flex">
                                    <div class="search d-md-block">
                                        <ul class="d-flex align-items-center">
                                            <li>
                                                <div class="nav-search search-switch">
                                                    <form action="/search" method="POST" class="search-form">
                                                        <i class="ti-search"></i>
                                                    </form>
                                                </div>
                                            </li>
                                            <li>
                                                <div class="wishlist-stor">
                                                    <a href="/wishlist">
                                                        <i class="ti-heart"></i>
                                                        <span id="wishlistCountDesktop" class="wishlist-count">0</span>
                                                    </a>
                                                </div>
                                            </li>
                                            <li>
                                                <div class="card-stor">
                                                    <a href="/cart">
                                                        <img src="/assets/img/gallery/card.svg" alt="">
                                                        <span id="cartCountDesktop">0</span>
                                                    </a>
                                                </div>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </header>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const toggler = document.querySelector('.navbar-toggler');
            const collapse = document.getElementById('navbarContent');
            let isOpen = false;

            toggler.addEventListener('click', function(e) {
                e.preventDefault(); // Prevent any default behavior
                console.log('Toggler clicked');
                
                if (isOpen) {
                    collapse.classList.remove('show');
                    isOpen = false;
                } else {
                    collapse.classList.add('show');
                    isOpen = true;
                }
            });

            // Logout functionality
            const logoutBtn = document.getElementById('logoutBtn');
            if (logoutBtn) {
                logoutBtn.addEventListener('click', function() {
                    Swal.fire({
                        title: 'Are you sure?',
                        text: "You will be logged out of your session.",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Yes, logout'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            fetch('/logout', { method: 'GET' })
                                .then(response => {
                                    if (response.ok) {
                                        Swal.fire({
                                            icon: 'success',
                                            title: 'Logged out!',
                                            timer: 1500,
                                            showConfirmButton: false
                                        }).then(() => {
                                            window.location.href = '/login';
                                        });
                                    } else {
                                        Swal.fire('Error', 'Failed to log out', 'error');
                                    }
                                })
                                .catch(error => {
                                    console.error('Logout error:', error);
                                    Swal.fire('Error', 'An unexpected error occurred', 'error');
                                });
                        }
                    });
                });
            }

            // Update counts
            async function updateCounts() {
                try {
                    const response = await fetch('/getCountOfCartWish');
                    const data = await response.json();
                    ['wishlistCount', 'cartCount', 'wishlistCountDesktop', 'cartCountDesktop'].forEach(id => {
                        const elem = document.getElementById(id);
                        if (elem) {
                            elem.innerText = id.includes('wishlist') ? data.wishlistQuantity : data.cartQuantity;
                            elem.style.display = parseInt(elem.innerText) > 0 ? 'flex' : 'none';
                        }
                    });
                } catch (error) {
                    console.error("Error updating counts:", error);
                }
            }

            updateCounts();
            setInterval(updateCounts, 5000);
        });
    </script>
</body>
