    <style>
        /* Header Base */
        .header-area {
            background: #fff;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        #navigation {
            list-style: none;
            display: flex;
            padding: 0;
            margin: 0;
            align-items: center;
            gap: 20px; /* Gap between nav items */
        }

        #navigation > li {
            position: relative;
        }

        #navigation > li > a {
            display: block;
            padding: 10px 0;
            color: black;
            text-decoration: none;
            font-weight: 500;
        }

        #navigation .sign-in-container {
            margin-left: 120px; /* Increased gap after Contact */
            display: flex;
            align-items: center;
            gap: 20px; /* Gap between sign-in/signup */
        }

        .dropdown {
            position: relative;
        }

        .sign-in-link {
            color: black;
            text-decoration: none;
            padding: 8px 20px;
            transition: all 0.3s ease;
            border-radius: 4px;
            display: inline-block;
            white-space: nowrap;
        }

        .dropdown .sign-in-link {
            padding: 8px 20px;
        }

        .dropdown-content {
            position: absolute;
            right: 0;
            top: 100%;
            background-color: white;
            min-width: 180px;
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
            border-radius: 4px;
            display: none;
            z-index: 1000;
        }

        .dropdown-content a {
            padding: 12px 16px;
            display: block;
            color: black;
            text-decoration: none;
        }

        .dropdown-content a:hover {
            background-color: #f1f1f1;
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .header-right1 {
            display: flex;
            align-items: center;
            gap: 20px; /* Gap between search/wishlist/cart */
        }

        .search ul {
            display: flex;
            align-items: center;
            gap: 20px;
            margin: 0;
            padding: 0;
            list-style: none;
        }

        .wishlist-stor, .card-stor {
            position: relative;
            cursor: pointer;
            display: flex;
            align-items: center;
        }

        .wishlist-stor a, .card-stor a {
            color: #000;
            font-size: 24px;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
        }

        .card-stor img {
            width: 24px; /* Fixed size for cart icon */
            height: 24px;
            object-fit: contain;
        }

        .wishlist-stor:hover a, .card-stor:hover a {
            color: #ff4b6e;
        }

        .wishlist-stor i {
            transition: transform 0.3s ease;
        }

        .wishlist-stor:hover i {
            transform: scale(1.1);
        }

        .wishlist-count, #cartCount, #wishlistCountDesktop, #cartCountDesktop {
            position: absolute;
            top: -8px;
            right: -8px;
            background-color: #ff4b6e;
            color: white;
            border-radius: 50%;
            width: 18px;
            height: 18px;
            font-size: 11px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .menu-wrapper {
            padding: 15px 0;
        }

        /* Bootstrap Overrides and Responsive Adjustments */
        .navbar-toggler {
            border: none;
            padding: 5px;
            margin-left: 10px; /* Gap between icons and toggler */
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba(0, 0, 0, 0.8)' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
        }

        @media (min-width: 992px) {
            .header-left {
                flex-grow: 1;
                display: flex;
                align-items: center;
                gap: 40px;
            }

            .header-right1 {
                margin-left: 30px;
            }

            .navbar-nav {
                align-items: center;
            }
        }

        @media (max-width: 991px) {
            .menu-wrapper {
                flex-direction: row;
                justify-content: space-between;
                align-items: center;
            }

            #navigation {
                flex-direction: column;
                align-items: start;
                text-align: left;
                width: 100%;
                gap: 10px; /* Reduced gap in mobile menu */
            }

            #navigation > li {
                margin-right: 0;
                margin-bottom: 10px;
                width: 100%;
            }

            #navigation .sign-in-container {
                margin: 10px 0;
                justify-content: start;
                width: 100%;
                gap: 15px;
                flex-direction: column;
            }

            .dropdown {
                margin-left: 0;
                width: 100%;
            }

            .dropdown-content {
                position: static;
                width: 100%;
                box-shadow: none;
                border-top: 1px solid #eee;
                border-bottom: 1px solid #eee;
                padding-left: 15px; /* Indent for alignment */
            }

            .header-right1 {
                margin-left: 0;
                gap: 15px; /* Reduced gap between cart/wishlist in mobile */
            }

            .search ul {
                gap: 15px;
            }

            .navbar-collapse {
                background: #fff;
                padding: 15px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }

            .logo img {
                max-width: 150px;
            }

            .navbar-top {
                display: flex;
                align-items: center;
                justify-content: space-between;
                width: 100%;
            }
        }

        @media (max-width: 576px) {
            .sign-in-container {
                gap: 10px;
            }

            .sign-in-link {
                padding: 8px 15px;
                font-size: 14px;
            }

            .search ul, .header-right1 {
                gap: 10px;
            }

            .wishlist-stor a, .card-stor a {
                font-size: 20px;
            }

            .wishlist-count, #cartCount, #wishlistCountDesktop, #cartCountDesktop {
                width: 16px;
                height: 16px;
                font-size: 10px;
            }

            .logo img {
                max-width: 120px;
            }
        }
    </style>
</head>
