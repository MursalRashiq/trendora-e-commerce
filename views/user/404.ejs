<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>404 - Page Not Found</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f8f9fa;
            color: #333;
            height: 100vh;
            overflow: hidden;
            perspective: 1000px;
        }
        
        .page-wrapper {
            position: relative;
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        
        .error-container {
            position: relative;
            z-index: 10;
            text-align: center;
            padding: 2rem;
            max-width: 800px;
            width: 90%;
        }
        
        .glitch-wrapper {
            position: relative;
            display: inline-block;
            margin-bottom: 2rem;
        }
        
        .glitch {
            font-size: clamp(6rem, 20vw, 12rem);
            font-weight: 900;
            position: relative;
            color: #056b63;
            animation: glitch 2s infinite;
        }
        
        .glitch::before,
        .glitch::after {
            content: "404";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }
        
        .glitch::before {
            color: #ff5252;
            z-index: -1;
            animation: glitch-effect 2s infinite;
        }
        
        .glitch::after {
            color: #4a00e0;
            z-index: -2;
            animation: glitch-effect 3s infinite;
        }
        
        @keyframes glitch-effect {
            0% {
                transform: translate(0);
            }
            20% {
                transform: translate(-5px, 5px);
            }
            40% {
                transform: translate(-5px, -5px);
            }
            60% {
                transform: translate(5px, 5px);
            }
            80% {
                transform: translate(5px, -5px);
            }
            100% {
                transform: translate(0);
            }
        }
        
        @keyframes glitch {
            0% {
                transform: skewX(0);
            }
            5% {
                transform: skewX(2deg);
            }
            10% {
                transform: skewX(-2deg);
            }
            15% {
                transform: skewX(0);
            }
            100% {
                transform: skewX(0);
            }
        }
        
        .error-text {
            font-size: clamp(1.5rem, 5vw, 2.5rem);
            margin-bottom: 1.5rem;
            color: #333;
            font-weight: 700;
            position: relative;
        }
        
        .error-text::after {
            content: "";
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 3px;
            background: linear-gradient(90deg, #ff5252, #4a00e0);
        }
        
        .error-description {
            font-size: clamp(1rem, 3vw, 1.2rem);
            margin-bottom: 2.5rem;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
            line-height: 1.6;
            color: #666;
        }
        
        .home-button {
            padding: clamp(0.6rem, 2vw, 0.8rem) clamp(1.5rem, 4vw, 2rem);
            font-size: clamp(1rem, 3vw, 1.2rem);
            background: #056b63;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            z-index: 1;
        }
        
        .home-button::before {
            content: "";
            position: absolute;
            left: -20px;
            top: 0;
            width: 0;
            height: 100%;
            background: linear-gradient(90deg, #ff5252, #4a00e0);
            transition: all 0.3s ease;
            z-index: -1;
            transform: skewX(-25deg);
        }
        
        .home-button:hover::before {
            width: 150%;
        }
        
        /* 3D Elements */
        .shape {
            position: absolute;
            width: 100px;
            height: 100px;
            animation: rotate 20s linear infinite;
        }
        
        @keyframes rotate {
            from {
                transform: rotateY(0deg) rotateX(0deg);
            }
            to {
                transform: rotateY(360deg) rotateX(360deg);
            }
        }
        
        .cube {
            position: absolute;
            width: 100px;
            height: 100px;
            transform-style: preserve-3d;
            animation: cube-spin 20s linear infinite;
        }
        
        .face {
            position: absolute;
            width: 100px;
            height: 100px;
            background: rgba(255, 255, 255, 0.7);
            border: 2px solid #056b63;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            color: #056b63;
            opacity: 0.8;
            box-shadow: 0 0 10px rgba(5, 107, 99, 0.3);
        }
        
        .face-1 { transform: translateZ(50px); }
        .face-2 { transform: rotateY(180deg) translateZ(50px); }
        .face-3 { transform: rotateY(90deg) translateZ(50px); }
        .face-4 { transform: rotateY(-90deg) translateZ(50px); }
        .face-5 { transform: rotateX(90deg) translateZ(50px); }
        .face-6 { transform: rotateX(-90deg) translateZ(50px); }
        
        @keyframes cube-spin {
            from {
                transform: rotateX(0deg) rotateY(0deg);
            }
            to {
                transform: rotateX(360deg) rotateY(360deg);
            }
        }
        
        /* Maze Pattern */
        .maze {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 0;
            opacity: 0.07;
            pointer-events: none;
            overflow: hidden;
        }
        
        /* Grid animation */
        .grid {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 50%;
            display: flex;
            flex-direction: column;
            z-index: -1;
        }
        
        .grid-row {
            display: flex;
            height: 2px;
            margin-bottom: 20px;
        }
        
        .grid-cell {
            height: 100%;
            flex: 1;
            background: linear-gradient(90deg, transparent, rgba(5, 107, 99, 0.3), transparent);
            transform-origin: center bottom;
            animation: grid-pulse 3s infinite;
        }
        
        @keyframes grid-pulse {
            0%, 100% {
                transform: scaleY(1);
                opacity: 0.2;
            }
            50% {
                transform: scaleY(2);
                opacity: 0.5;
            }
        }
        
        /* Flying elements */
        .flying-numbers {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 0;
        }
        
        .flying-number {
            position: absolute;
            font-size: 24px;
            color: rgba(5, 107, 99, 0.3);
            animation: fly-through 10s linear infinite;
        }
        
        @keyframes fly-through {
            from {
                transform: translateX(-100px) translateY(0) rotate(0deg);
                opacity: 0;
            }
            10% {
                opacity: 1;
            }
            90% {
                opacity: 1;
            }
            to {
                transform: translateX(calc(100vw + 100px)) translateY(50vh) rotate(360deg);
                opacity: 0;
            }
        }
        
        /* Speech Bubble */
        .speech-bubble {
            position: absolute;
            background: white;
            border-radius: 10px;
            padding: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            max-width: 200px;
            animation: bounce 3s ease-in-out infinite;
            font-size: 14px;
            line-height: 1.4;
            z-index: 2;
        }
        
        .speech-bubble::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            border-width: 10px 10px 0;
            border-style: solid;
            border-color: white transparent transparent;
        }
        
        @keyframes bounce {
            0%, 100% {
                transform: translateY(0);
            }
            50% {
                transform: translateY(-15px);
            }
        }
        
        /* Responsive adjustments */
        @media (max-width: 768px) {
            .flying-numbers, .speech-bubble {
                display: none;
            }
            
            .cube {
                width: 50px;
                height: 50px;
            }
            
            .face {
                width: 50px;
                height: 50px;
                font-size: 16px;
            }
            
            .face-1 { transform: translateZ(25px); }
            .face-2 { transform: rotateY(180deg) translateZ(25px); }
            .face-3 { transform: rotateY(90deg) translateZ(25px); }
            .face-4 { transform: rotateY(-90deg) translateZ(25px); }
            .face-5 { transform: rotateX(90deg) translateZ(25px); }
            .face-6 { transform: rotateX(-90deg) translateZ(25px); }
        }
    </style>
</head>
<body>
    <div class="page-wrapper">
        <div class="maze" id="maze"></div>
        <div class="flying-numbers" id="flying-numbers"></div>
        
        <div class="grid">
            <div class="grid-row">
                <div class="grid-cell" style="animation-delay: 0s;"></div>
                <div class="grid-cell" style="animation-delay: 0.2s;"></div>
                <div class="grid-cell" style="animation-delay: 0.4s;"></div>
                <div class="grid-cell" style="animation-delay: 0.6s;"></div>
                <div class="grid-cell" style="animation-delay: 0.8s;"></div>
                <div class="grid-cell" style="animation-delay: 1s;"></div>
            </div>
            <div class="grid-row">
                <div class="grid-cell" style="animation-delay: 0.1s;"></div>
                <div class="grid-cell" style="animation-delay: 0.3s;"></div>
                <div class="grid-cell" style="animation-delay: 0.5s;"></div>
                <div class="grid-cell" style="animation-delay: 0.7s;"></div>
                <div class="grid-cell" style="animation-delay: 0.9s;"></div>
                <div class="grid-cell" style="animation-delay: 1.1s;"></div>
            </div>
            <div class="grid-row">
                <div class="grid-cell" style="animation-delay: 0.2s;"></div>
                <div class="grid-cell" style="animation-delay: 0.4s;"></div>
                <div class="grid-cell" style="animation-delay: 0.6s;"></div>
                <div class="grid-cell" style="animation-delay: 0.8s;"></div>
                <div class="grid-cell" style="animation-delay: 1s;"></div>
                <div class="grid-cell" style="animation-delay: 1.2s;"></div>
            </div>
        </div>
        
        <div class="cube" style="top: 10%; left: 10%;">
            <div class="face face-1">4</div>
            <div class="face face-2">4</div>
            <div class="face face-3">0</div>
            <div class="face face-4">4</div>
            <div class="face face-5">?</div>
            <div class="face face-6">!</div>
        </div>
        
        <div class="cube" style="bottom: 20%; right: 15%;">
            <div class="face face-1">4</div>
            <div class="face face-2">0</div>
            <div class="face face-3">4</div>
            <div class="face face-4">?</div>
            <div class="face face-5">!</div>
            <div class="face face-6">4</div>
        </div>
        
        <div class="speech-bubble" style="top: 20%; right: 20%;">
            Hmm, this page seems to be missing. Maybe it took a vacation?
        </div>
        
        <div class="error-container">
            <div class="glitch-wrapper">
                <div class="glitch">404</div>
            </div>
            <h2 class="error-text">Page Not Found</h2>
            <p class="error-description">Oops! The page you're looking for has gone missing. It might be exploring other parts of the internet or taking a break.</p>
            <a href="/" class="home-button">Return Home</a>
        </div>
    </div>
    
    <script>
        // Create maze pattern
        const maze = document.getElementById('maze');
        const mazeSize = 20;
        const mazeHtml = [];
        
        for (let i = 0; i < mazeSize; i++) {
            for (let j = 0; j < mazeSize; j++) {
                // Random direction for maze lines
                const direction = Math.random() > 0.5 ? 'horizontal' : 'vertical';
                mazeHtml.push(`<div style="
                    position: absolute;
                    ${direction === 'horizontal' ? 'width: 100%; height: 1px;' : 'width: 1px; height: 100%;'}
                    background-color: #056b63;
                    top: ${(i / mazeSize) * 100}%;
                    left: ${(j / mazeSize) * 100}%;
                "></div>`);
            }
        }
        
        maze.innerHTML = mazeHtml.join('');
        
        // Create flying numbers
        const flyingNumbers = document.getElementById('flying-numbers');
        const digits = ['4', '0', '4', '!', '?', '4', '0', '4'];
        
        for (let i = 0; i < 20; i++) {
            const number = document.createElement('div');
            number.classList.add('flying-number');
            number.textContent = digits[Math.floor(Math.random() * digits.length)];
            
            // Random position and timing
            number.style.top = `${Math.random() * 100}%`;
            number.style.animationDelay = `${Math.random() * 10}s`;
            number.style.animationDuration = `${Math.random() * 5 + 8}s`;
            
            // Random colors
            const colors = ['#056b63', '#ff5252', '#4a00e0', '#333'];
            number.style.color = colors[Math.floor(Math.random() * colors.length)];
            number.style.opacity = (Math.random() * 0.5 + 0.1).toString();
            
            // Random size
            number.style.fontSize = `${Math.random() * 20 + 14}px`;
            
            flyingNumbers.appendChild(number);
        }
        
        // Handle responsive behavior
        window.addEventListener('resize', () => {
            // Adjust any needed responsive elements here
            if (window.innerWidth < 768) {
                // Remove some animations for performance on mobile
                const flyingElements = document.getElementById('flying-numbers');
                if (flyingElements) {
                    flyingElements.style.display = 'none';
                }
            } else {
                const flyingElements = document.getElementById('flying-numbers');
                if (flyingElements) {
                    flyingElements.style.display = 'block';
                }
            }
        });
    </script>
</body>
</html>