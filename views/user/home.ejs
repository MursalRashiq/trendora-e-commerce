                <% for (let i = 0; i < products.length; i++) { %>
                <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                    <div class="product-card wow fadeInUp" data-wow-delay=".<%= i+1 %>s">
                        <div class="product-img">
                            <a href="/productDetails?id=<%= products[i]._id %>">
                                <% if (products[i].productImage && products[i].productImage.length > 0) { %>
                                    <img src="<%= products[i].productImage[0] %>" alt="<%= products[i].productName %>">
                                <% } else { %>
                                    <img src="/uploads/product-images/default.jpg" alt="Default Product Image">
                                <% } %>
                            </a>
                            <div class="product-badges">
                                <% if (products[i].isNew) { %>
                                    <span class="badge-new">New</span>
                                <% } %>
                                <% if (products[i].salePrice < products[i].regularPrice) { %>
                                    <span class="badge-sale">Sale</span>
                                <% } %>
                            </div>
                        </div>
                        <div class="product-details">
                            <h3 class="product-title"><%= products[i].productName %></h3>
                            <div class="product-price">
                                <span class="sale-price">₹<%= products[i].salePrice %></span>
                                <% if (products[i].salePrice < products[i].regularPrice) { %>
                                    <span class="regular-price">₹<%= products[i].regularPrice %></span>
                                <% } %>
                            </div>
                            <div class="product-actions">
                                <a href="/productDetails?id=<%= products[i]._id %>" class="btn-view">
                                    <i class="fas fa-eye"></i> View Details
                                </a>
                                <a href="/cart?id=<%=products[i]._id%>" class="btn-cart">
                                    <i class="fas fa-shopping-cart"></i> Add to Cart
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>
