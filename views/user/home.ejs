<style>
.hero-slider {
    position: relative;
    width: 100%;
    overflow: hidden;
    z-index: 1;
}

.swiper-container {
    width: 100%;
    margin: 0;
}

.single-hero-slider {
    position: relative;
    height: 100vh;
    min-height: 900px;
    width: 100%;
}

.single-slider-img {
    height: 100%;
    width: 100%;
}

.single-slider-img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.single-slider-img::after {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to right, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.3) 50%, rgba(0,0,0,0) 100%);
}

.single-slider-content {
    position: absolute;
    top: 50%;
    left: 10%;
    transform: translateY(-50%);
    max-width: 650px;
    color: white;
    z-index: 2;
}

.single-slider-content h1 {
    font-size: 5rem;
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 30px;
    color: #fff;
    text-transform: uppercase;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.8s forwards;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
}

.single-slider-content p {
    font-size: 1.6rem;
    line-height: 1.6;
    margin-bottom: 40px;
    color: rgba(255, 255, 255, 0.9);
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.8s 0.3s forwards;
    position: relative;
    padding-left: 20px;
    border-left: 4px solid #ff6b6b;
}

.shop-now-btn {
    display: inline-flex;
    align-items: center;
    padding: 20px 50px;
    background: #ff6b6b;
    color: white;
    text-decoration: none;
    border-radius: 50px;
    font-weight: 600;
    font-size: 1.2rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    transition: all 0.4s ease;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.8s 0.6s forwards;
    box-shadow: 0 5px 20px rgba(255, 107, 107, 0.4);
}

.shop-now-btn i {
    margin-left: 10px;
    transition: transform 0.3s ease;
}

.shop-now-btn:hover {
    background: #fff;
    color: #ff6b6b;
    transform: translateY(-5px);
}

.shop-now-btn:hover i {
    transform: translateX(8px);
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.swiper-button-next,
.swiper-button-prev {
    width: 70px;
    height: 70px;
    background: rgba(255,255,255,0.1);
    border-radius: 50%;
    transition: all 0.3s ease;
}

.swiper-button-next:after,
.swiper-button-prev:after {
    font-size: 28px;
    color: white;
}

.swiper-button-next:hover,
.swiper-button-prev:hover {
    background: #ff6b6b;
    transform: scale(1.1);
}

.swiper-pagination-bullet {
    width: 14px;
    height: 14px;
    background: rgba(255,255,255,0.5);
    transition: all 0.3s ease;
}

.swiper-pagination-bullet-active {
    width: 40px;
    border-radius: 7px;
    background: #ff6b6b;
}

@media (max-width: 768px) {
    .single-hero-slider {
        height: 80vh;
        min-height: 600px;
    }

    .single-slider-content {
        left: 5%;
        max-width: 90%;
    }

    .single-slider-content h1 {
        font-size: 3rem;
    }

    .single-slider-content p {
        font-size: 1.2rem;
    }

    .shop-now-btn {
        padding: 15px 35px;
        font-size: 1rem;
    }
}

.new-arrival {
    padding: 80px 0;
    background: #f8f9fa;
}

.title {
    font-size: 3.5rem;
    font-weight: 700;
    color: #2c3e50;
    text-transform: uppercase;
    margin-bottom: 15px;
}

.subtitle {
    color: #666;
    font-size: 1.2rem;
    margin-bottom: 40px;
}

.product-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 5px 15px rgba(0,0,0,0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    margin-bottom: 25px;
}

.product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0,0,0,0.12);
}

.product-img {
    position: relative;
    padding-top: 100%;
    overflow: hidden;
}

.product-img img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
}

.product-img:hover img {
    transform: scale(1.05);
}

.product-badges {
    position: absolute;
    top: 10px;
    left: 10px;
    display: flex;
    gap: 5px;
}

.badge-new, .badge-sale {
    padding: 5px 10px;
    border-radius: 4px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
}

.badge-new {
    background: #2ecc71;
    color: white;
}

.badge-sale {
    background: #e74c3c;
    color: white;
}

.product-details {
    padding: 20px;
}

.product-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 10px;
    height: 2.4em;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.product-price {
    margin-bottom: 15px;
}

.sale-price {
    font-size: 1.2rem;
    font-weight: 700;
    color: #2c3e50;
}

.regular-price {
    font-size: 1rem;
    color: #999;
    text-decoration: line-through;
    margin-left: 8px;
}

.product-actions {
    display: flex;
    gap: 10px;
}

.btn-view, .btn-cart {
    flex: 1;
    padding: 8px 15px;
    border-radius: 6px;
    font-size: 14px;
    text-align: center;
    text-decoration: none;
    transition: all 0.3s ease;
}

.btn-view {
    background: #3498db;
    color: white;
}

.btn-cart {
    background: #2ecc71;
    color: white;
}

.btn-view:hover, .btn-cart:hover {
    opacity: 0.9;
    color: white;
}

.banner-area {
    padding: 60px 0;
    background: #f8f9fa;
}

.banner-grid {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: 30px;
    max-width: 1400px;
    margin: 0 auto;
}

.banner__item {
    position: relative;
    overflow: hidden;
    border-radius: 15px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    height: 400px;
}

/* First banner - large right */
.banner__item:nth-child(1) {
    grid-column: 5 / 13;
    grid-row: 1;
}

/* Second banner - medium left */
.banner__item:nth-child(2) {
    grid-column: 1 / 6;
    grid-row: 2;
}

/* Third banner - large bottom */
.banner__item:nth-child(3) {
    grid-column: 6 / 13;
    grid-row: 2;
}

.banner__item__pic {
    height: 100%;
    width: 100%;
}

.banner__item__pic img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
}

.banner__item:hover .banner__item__pic img {
    transform: scale(1.05);
}

.banner__item__text {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 40px;
    background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);
    color: white;
}

.banner__item__text h2 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 20px;
    color: #fff;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
}

.banner__item__text a {
    display: inline-block;
    padding: 12px 30px;
    background: #ff6b6b;
    color: white;
    text-decoration: none;
    border-radius: 5px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s ease;
}

.banner__item__text a:hover {
    background: #ff4c4c;
    transform: translateY(-2px);
}

@media (max-width: 992px) {
    .banner-grid {
        grid-template-columns: 1fr;
        gap: 20px;
        padding: 0 15px;
    }

    .banner__item:nth-child(1),
    .banner__item:nth-child(2),
    .banner__item:nth-child(3) {
        grid-column: 1 / -1;
        grid-row: auto;
        height: 300px;
    }

    .banner__item__text {
        padding: 20px;
    }

    .banner__item__text h2 {
        font-size: 1.5rem;
    }
}

.banner__item--middle {
    margin-top: -30px;
}

.banner__item--last {
    margin-top: 30px;
}

@media (max-width: 768px) {
    .banner__item__pic {
        height: 300px;
    }
    
    .banner__item__text h2 {
        font-size: 1.5rem;
    }
    
    .banner__item--middle {
        margin-top: 0;
    }

    .banner__item__text {
        padding: 20px;
    }
}

