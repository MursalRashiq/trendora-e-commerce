<%- include("../../views/partials/admin/header") %>
<head>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: #f4f7fa;
        }

        .content-main {
            padding: 3rem;
            max-width: 1400px;
            margin: 3rem auto;
        }

        .search-wrapper {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: #fff;
            padding: 1.5rem;
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
            margin-bottom: 2rem;
            animation: fadeIn 0.8s ease-in;
        }

        .search-container {
            width: 100%;
            max-width: 500px;
            margin: 0;
        }

        .search-form {
            display: flex;
            align-items: center;
            gap: 1rem;
            width: 100%;
        }

        .search-input {
            flex: 1;
            padding: 0.875rem 1rem;
            border: 2px solid #e2e8f0;
            border-radius: 10px;
            font-size: 0.95rem;
            outline: none;
            transition: all 0.3s ease;
        }

        .search-input:focus {
            border-color: #088178;
            box-shadow: 0 0 10px rgba(8, 129, 120, 0.2);
        }

        .search-input::placeholder {
            color: #a0aec0;
        }

        .btn {
            padding: 0.75rem 1.5rem;
            border-radius: 10px;
            font-weight: 600;
            font-size: 0.95rem;
            cursor: pointer;
            transition: all 0.3s ease;
            border: none;
            white-space: nowrap;
        }

        .btn-primary {
            background: linear-gradient(90deg, #088178, #056b63);
            color: #fff;
        }

        .btn-primary:hover {
            background: linear-gradient(90deg, #056b63, #044e47);
            transform: translateY(-3px);
            box-shadow: 0 6px 15px rgba(8, 129, 120, 0.3);
        }

        .btn-danger {
            background: #dc3545;
            color: #fff;
        }

        .btn-danger:hover {
            background: #b71c1c;
            transform: translateY(-3px);
            box-shadow: 0 6px 15px rgba(220, 53, 69, 0.3);
        }

        .add-product-btn {
            margin-left: 1rem;
        }

        .products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 2rem;
            margin-top: 2rem;
        }

        .product-card {
            display: none;
            background: #fff;
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .product-card.visible {
            display: block;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 25px rgba(0, 0, 0, 0.1);
        }

        .product-thumbnail {
            width: 100%;
            height: 220px;
            object-fit: cover;
            border-bottom: 2px solid #e2e8f0;
        }

        .product-details {
            padding: 1.5rem;
        }

        .product-details h5 {
            margin: 0 0 0.75rem 0;
            font-size: 1.1rem;
            font-weight: 600;
            color: #1a3c63;
        }

        .product-details p {
            margin: 0 0 1rem 0;
            font-size: 1rem;
            color: #4a5568;
            font-weight: 500;
        }

        .actions {
            display: flex;
            gap: 1rem;
        }

        .pagination-container {
            margin-top: 3rem;
            display: flex;
            justify-content: center;
            gap: 0.75rem;
        }

        .page-link {
            padding: 0.75rem 1.25rem;
            border-radius: 10px;
            background: #fff;
            color: #088178;
            text-decoration: none;
            border: 2px solid #e2e8f0;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .page-link:hover {
            background: #eef2f7;
            color: #056b63;
        }

        .page-link.active {
            background: #088178;
            color: #fff;
            border-color: #088178;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        @media (max-width: 768px) {
            .content-main { padding: 1.5rem; }
            .search-wrapper { flex-direction: column; gap: 1rem; padding: 1rem; }
            .search-container { max-width: 100%; }
            .add-product-btn { margin-left: 0; width: 100%; }
            .products-grid { grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); }
            .product-thumbnail { height: 180px; }
        }

        @media (max-width: 480px) {
            .search-input { min-width: 150px; }
            .btn { padding: 0.625rem 1rem; }
            .product-details h5 { font-size: 1rem; }
            .product-details p { font-size: 0.9rem; }
        }
    </style>
</head>

<div class="content-main">
    <div class="search-wrapper">
        <div class="search-container">
            <form action="/admin/products" method="get" class="search-form">
                <input type="text"
                       class="search-input"
                       placeholder="Search products..."
                       name="search"
                       value="<%= searchQuery || '' %>">
                <button type="submit" class="btn btn-primary">Search</button>
            </form>
        </div>
        <a href="/admin/addProducts" class="btn btn-primary add-product-btn">Add Product</a>
    </div>

    <div class="products-grid">
        <% if (products && products.length > 0) { %>
            <% products.forEach((product, index) => { %>
                <div class="product-card">
                    <img src="<%= product.productImage && product.productImage.length > 0 
                        ? product.productImage[0] 
                        : '/assets/img/no-image.jpg' %>"
                         alt="<%= product.productName || 'Unnamed Product' %>"
                         class="product-thumbnail"
                         onerror="this.onerror=null; this.src='/assets/img/no-image.jpg';">
                    <div class="product-details">
                        <h5><%= product.productName || 'Unnamed Product' %></h5>
                        <p>â‚¹<%= typeof product.price === 'number' ? product.price.toFixed(2) : '0.00' %></p>
                        <div class="actions">
                            <a href="/admin/editProduct/<%= product._id %>" class="btn btn-primary">Edit</a>
                            <button onclick="deleteProduct('<%= product._id %>')" class="btn btn-danger">Delete</button>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div style="grid-column: 1 / -1; text-align: center; padding: 2rem; color: #6b7280;">
                No products found
            </div>
        <% } %>
    </div>

    <div class="pagination-container">
        <% if (products && products.length > 0) { %>
            <% for(let i = 1; i <= Math.ceil(products.length / 3); i++) { %>
                <a href="?page=<%= i %><%= searchQuery ? '&search=' + searchQuery : '' %>" 
                   class="page-link <%= currentPage == i ? 'active' : '' %>">
                    <%= i %>
                </a>
            <% } %>
        <% } %>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const productsPerPage = 3;
    const currentPage = <%= currentPage || 1 %>;
    const products = document.querySelectorAll('.product-card');
    
    const start = (currentPage - 1) * productsPerPage;
    const end = start + productsPerPage;
    
    products.forEach((product, index) => {
        if (index >= start && index < end) {
            product.classList.add('visible');
        }
    });
});

function deleteProduct(productId) {
    if (confirm('Are you sure you want to delete this product?')) {
        fetch(`/admin/deleteProduct/${productId}`, { method: 'DELETE' })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Failed to delete product: ' + (data.message || 'Unknown error'));
                }
            })
            .catch(error => {
                alert('Error deleting product: ' + error.message);
            });
    }
}
</script>

<%- include("../../views/partials/admin/footer") %>