<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>404 - Page Not Found</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #0f0c29, #302b63, #24243e);
            color: #fff;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
        }
        
        .container {
            text-align: center;
            padding: 2rem;
            position: relative;
            z-index: 1;
            max-width: 800px;
            width: 90%;
        }
        
        .error-code {
            font-size: clamp(6rem, 20vw, 12rem);
            font-weight: 900;
            background: linear-gradient(45deg, #ff7eb3, #ff758c, #ff8c42);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 1rem;
            filter: drop-shadow(0 10px 10px rgba(0,0,0,0.3));
            opacity: 0;
            transform: translateY(50px);
            animation: fadeInUp 0.8s ease-out forwards;
        }
        
        .error-text {
            font-size: clamp(1.5rem, 5vw, 2.5rem);
            margin-bottom: 2rem;
            opacity: 0;
            transform: translateY(50px);
            animation: fadeInUp 0.8s ease-out 0.3s forwards;
            text-shadow: 0 2px 10px rgba(0,0,0,0.3);
        }
        
        .error-description {
            font-size: clamp(1rem, 3vw, 1.2rem);
            margin-bottom: 3rem;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
            opacity: 0;
            transform: translateY(50px);
            animation: fadeInUp 0.8s ease-out 0.6s forwards;
            line-height: 1.6;
        }
        
        .home-button {
            padding: clamp(0.6rem, 2vw, 0.8rem) clamp(1.5rem, 4vw, 2rem);
            font-size: clamp(1rem, 3vw, 1.2rem);
            background: linear-gradient(45deg, #ff7eb3, #ff758c);
            color: white;
            border: none;
            border-radius: 30px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
            opacity: 0;
            transform: translateY(50px);
            animation: fadeInUp 0.8s ease-out 0.9s forwards;
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }
        
        .home-button:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.3);
            background: linear-gradient(45deg, #ff8c42, #ff758c);
        }
        
        @keyframes fadeInUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .stars {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 0;
        }
        
        .star {
            position: absolute;
            width: 2px;
            height: 2px;
            background-color: white;
            border-radius: 50%;
            animation: twinkle 2s infinite;
        }
        
        @keyframes twinkle {
            0%, 100% {
                opacity: 0.2;
                transform: scale(1);
            }
            50% {
                opacity: 1;
                transform: scale(1.5);
            }
        }
        
        .ufo {
            position: absolute;
            width: clamp(100px, 15vw, 180px);
            height: auto;
            animation: float 6s ease-in-out infinite;
            z-index: 0;
        }
        
        .planet {
            position: absolute;
            width: clamp(80px, 12vw, 150px);
            height: auto;
            opacity: 0.7;
            animation: spin 20s linear infinite;
        }
        
        @keyframes float {
            0%, 100% {
                transform: translateY(0) rotate(0deg);
            }
            50% {
                transform: translateY(-20px) rotate(5deg);
            }
        }
        
        @keyframes spin {
            0% {
                transform: rotate(0deg);
            }
            100% {
                transform: rotate(360deg);
            }
        }
        
        .meteor {
            position: absolute;
            width: 300px;
            height: 1px;
            transform: rotate(-45deg);
            background: linear-gradient(90deg, rgba(255,255,255,0), rgba(255,255,255,1));
            animation: meteor 3s linear infinite;
            top: 0;
            left: 70%;
        }
        
        @keyframes meteor {
            0% {
                transform: translateX(0) translateY(0) rotate(-45deg);
                opacity: 1;
            }
            70% {
                opacity: 1;
            }
            100% {
                transform: translateX(-100vw) translateY(100vh) rotate(-45deg);
                opacity: 0;
            }
        }
        
        .astronaut {
            position: absolute;
            animation: floatAstronaut 8s ease-in-out infinite;
        }
        
        @keyframes floatAstronaut {
            0%, 100% {
                transform: translateY(0) rotate(0deg);
            }
            50% {
                transform: translateY(-30px) rotate(-5deg);
            }
        }
        
        /* Responsive adjustments */
        @media (max-width: 768px) {
            .container {
                padding: 1.5rem;
            }
            
            .astronaut {
                width: 80px;
                height: 80px;
            }
            
            .meteor {
                width: 150px;
            }
        }
        
        @media (max-width: 480px) {
            .error-description {
                margin-bottom: 2rem;
            }
            
            .astronaut {
                display: none;
            }
        }
    </style>
</head>
<body>
    <div class="stars" id="stars"></div>
    <div class="meteor"></div>
    
    <div class="container">
        <h1 class="error-code">404</h1>
        <h2 class="error-text">Page Not Found</h2>
        <p class="error-description">Oops! The page you're looking for seems to have drifted into deep space. Let's navigate back to familiar territory.</p>
        <a href="/" class="home-button">Return Home</a>
    </div>

    <img src="/api/placeholder/150/150" alt="Lost astronaut" class="astronaut" style="right: 15%; top: 20%;">
    <img src="/api/placeholder/150/150" alt="Planet" class="planet" style="left: 10%; bottom: 15%;">
    <img src="/api/placeholder/180/100" alt="UFO" class="ufo" style="left: 65%; bottom: 25%;">

    <script>
        // Create twinkling stars
        const starsContainer = document.getElementById('stars');
        const starCount = window.innerWidth < 768 ? 50 : 100;
        
        for (let i = 0; i < starCount; i++) {
            const star = document.createElement('div');
            star.classList.add('star');
            star.style.left = `${Math.random() * 100}%`;
            star.style.top = `${Math.random() * 100}%`;
            star.style.animationDelay = `${Math.random() * 2}s`;
            star.style.width = `${Math.random() * 2 + 1}px`;
            star.style.height = star.style.width;
            starsContainer.appendChild(star);
        }
        
        // Create additional meteors at random intervals
        function createMeteor() {
            const meteor = document.createElement('div');
            meteor.classList.add('meteor');
            meteor.style.left = `${Math.random() * 100}%`;
            meteor.style.top = `${Math.random() * 30}%`;
            meteor.style.animationDuration = `${Math.random() * 2 + 2}s`;
            document.body.appendChild(meteor);
            
            setTimeout(() => {
                meteor.remove();
            }, 3000);
        }
        
        setInterval(createMeteor, 4000);
        
        // Handle responsive display
        window.addEventListener('resize', () => {
            // Update star count based on screen size
            while (starsContainer.firstChild) {
                starsContainer.removeChild(starsContainer.firstChild);
            }
            
            const newStarCount = window.innerWidth < 768 ? 50 : 100;
            for (let i = 0; i < newStarCount; i++) {
                const star = document.createElement('div');
                star.classList.add('star');
                star.style.left = `${Math.random() * 100}%`;
                star.style.top = `${Math.random() * 100}%`;
                star.style.animationDelay = `${Math.random() * 2}s`;
                star.style.width = `${Math.random() * 2 + 1}px`;
                star.style.height = star.style.width;
                starsContainer.appendChild(star);
            }
        });
    </script>
</body>
</html>