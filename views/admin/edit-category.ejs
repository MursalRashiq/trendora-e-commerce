<%- include("../../views/partials/admin/header") %>
    <style>
       body {
    display: flex;
    height: 100vh;
    margin: 0;
    font-family: Arial, sans-serif;
    background-color: #f4f7f6;
}

aside {
    width: 250px;
    background-color: #2c3e50;
    color: white;
    display: flex;
    flex-direction: column;
}

aside .brand-wrap {
    text-align: center;
    padding: 20px;
    background-color: #34495e;
}

aside .menu-link {
    display: block;
    padding: 10px 20px;
    color: white;
    text-decoration: none;
    transition: background-color 0.3s ease;
}

aside .menu-link:hover,
aside .menu-link.active {
    background-color: #34495e;
}

.main-wrap {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    background-color: #ffffff;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    margin: 0;
    margin-top: 60px;
}

header {
    background-color: #8da7ab;
    padding: 15px 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.content {
    padding: 20px;
    flex-grow: 1;
    background-color: #f4f7f6;
}

.form-control {
    width: 100%;
    padding: 10px;
    margin-bottom: 15px;
    border: 1px solid #ced4da;
    border-radius: 5px;
    transition: border-color 0.3s ease;
}

.form-control:focus {
    border-color: #007bff;
    outline: none;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
}

.btn-primary {
    background-color: #007bff;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    color: white;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease;
}

.btn-primary:hover {
    background-color: #0056b3;
    transform: scale(1.05);
}

.btn-primary:active {
    background-color: #004494;
    transform: scale(0.95);
}

.pagination-container {
    text-align: center;
    margin-top: 20px;
}

aside.minimized .menu-link .menu-icon {
    margin-right: 0;
}

aside .menu-link span {
    display: inline;
}

aside.minimized .menu-link span {
    display: none;
}

.card {
    background-color: #ffffff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    margin-top: 20px;
}

.card-header {
    margin-bottom: 20px;
}

.content-header h2 {
    font-size: 24px;
    color: #333333;
    margin-bottom: 10px;
}


    </style>
</head>

<body>
    <div class="main-wrap">

        <section class="content">
            <div class="content-header">
                <h2 class="content-title">Category Edit</h2>
            </div>

            <div class="card">
                <div class="card-header">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-6 mt-60">
                            <form method="post" action="/admin/editCategory/<%=category._id%>">  
                                <div class="mb-4 mt-30">
                                    <label for="product_name" class="form-label">Name</label>
                                    <input name="name" class="form-control border" value="<%= category.name %>">
                                </div>

                                <div class="mb-4">
                                    <label class="form-label">Description</label>
                                    <textarea name="description" class="form-control border"><%=category.description%></textarea>
                                </div>
                                <div class="d-grid text-end mt-30 col-md-5">
                                    <button class="btn btn-primary" type="submit">Update category</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                </div>
            </section>

        </body>