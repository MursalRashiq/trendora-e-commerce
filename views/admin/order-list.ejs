<%- include("../../views/partials/admin/header") %>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
</head>
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        color: #333;
    }

    .content-main {
        padding: 40px;
        margin-top: 30px;
        max-width: 1400px;
        margin-left: auto;
        margin-right: auto;
        animation: fadeIn 0.5s ease-in;
    }

    .content-header {
        margin-bottom: 30px;
        text-align: center;
    }

    .content-title {
        font-size: 2rem;
        color: #1a3c63;
        padding-bottom: 15px;
        border-bottom: 3px solid #3498db;
        display: inline-block;
        font-weight: 600;
        letter-spacing: 1px;
    }

    .filter-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 15px;
        padding: 20px;
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        margin: 30px auto;
        max-width: 1100px;
        transition: transform 0.3s ease;
    }

    .filter-container:hover {
        transform: translateY(-5px);
    }

    .filter-form {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        align-items: center;
        width: 100%;
    }

    .search-input, .filter-select, .filter-date {
        flex: 1;
        padding: 12px 18px;
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        outline: none;
        font-size: 14px;
        min-width: 180px;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
        background: #f9f9f9;
    }

    .search-input:focus, .filter-select:focus, .filter-date:focus {
        border-color: #3498db;
        box-shadow: 0 0 8px rgba(52, 152, 219, 0.3);
        background: #fff;
    }

    .table-container {
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        margin-top: 30px;
        overflow-x: auto;
        padding: 20px;
    }

    .table {
        width: 100%;
        margin-bottom: 0;
        border-collapse: separate;
        border-spacing: 0 10px;
    }

    .table th {
        background: linear-gradient(90deg, #3498db, #2980b9);
        color: #fff;
        padding: 15px 20px;
        font-weight: 500;
        text-align: left;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .table td {
        padding: 15px 20px;
        vertical-align: middle;
        background: #fafafa;
        border-bottom: none;
        transition: background 0.3s ease;
    }

    .table tr:hover td {
        background: #f1f5f9;
    }

    .btn-view {
        padding: 10px 20px;
        background: linear-gradient(90deg, #2ecc71, #27ae60);
        color: white;
        border-radius: 8px;
        text-decoration: none;
        display: inline-block;
        font-weight: 500;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .btn-view:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(46, 204, 113, 0.4);
        color: white;
    }

    .pagination {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
        margin-top: 30px;
        padding: 0;
        list-style: none;
    }

    .page-link {
        padding: 8px 15px;
        background: #3498db;
        color: white;
        border-radius: 6px;
        text-decoration: none;
        font-size: 14px;
        font-weight: 500;
        transition: background 0.3s ease, transform 0.3s ease;
    }

    .page-link:hover {
        background: #2980b9;
        transform: translateY(-2px);
        color: white;
    }

    .page-link.disabled {
        background: #95a5a6;
        cursor: not-allowed;
        transform: none;
        opacity: 0.7;
        pointer-events: none; /* Prevents clicking when disabled */
    }

    .page-current {
        padding: 8px 15px;
        background: #1a3c63;
        color: white;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 500;
    }

    .btn-primary {
        background: linear-gradient(90deg, #3498db, #2980b9);
        border: none;
        padding: 12px 25px;
        color: white;
        border-radius: 8px;
        cursor: pointer;
        font-weight: 500;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(52, 152, 219, 0.4);
    }

    .btn-secondary {
        background: linear-gradient(90deg, #95a5a6, #7f8c8d);
        border: none;
        padding: 12px 25px;
        color: white;
        border-radius: 8px;
        cursor: pointer;
        font-weight: 500;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .btn-secondary:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(149, 165, 166, 0.4);
    }

    @media (max-width: 768px) {
        .content-main {
            padding: 20px;
        }

        .filter-container {
            padding: 15px;
            max-width: 100%;
        }

        .search-input, .filter-select, .filter-date {
            min-width: 100%;
        }

        .table td, .table th {
            padding: 12px 15px;
        }

        .pagination {
            gap: 8px;
        }
    }

    @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }
</style>

<div class="content-main">
    <div class="content-header">
        <h2 class="content-title">Order Dashboard</h2>
    </div>

    <div class="filter-container">
        <form id="filterForm" action="/admin/orderList" method="get" class="filter-form">
            <input type="text" name="search" class="search-input" placeholder="Search by Order ID or Customer" value="<%= search || '' %>">
            <select name="status" class="filter-select">
                <option value="">All Status</option>
                <% ['Pending', 'Confirmed', 'Processing', 'Shipped', 'Delivered', 'Cancelled', 'Return Request', 'Returned', 'Return Rejected', 'Failed'].forEach(s => { %>
                    <option value="<%= s %>" <%= status === s ? 'selected' : '' %>><%= s %></option>
                <% }) %>
            </select>
            <select name="payment" class="filter-select">
                <option value="">All Payment Methods</option>
                <% ['cod', 'razorpay', 'wallet'].forEach(p => { %>
                    <option value="<%= p %>" <%= payment === p ? 'selected' : '' %>><%= p.charAt(0).toUpperCase() + p.slice(1) %></option>
                <% }) %>
            </select>
            <input type="date" name="startDate" class="filter-date" value="<%= startDate || '' %>">
            <input type="date" name="endDate" class="filter-date" value="<%= endDate || '' %>">
            <button type="submit" class="btn btn-primary">Apply Filters</button>
            <a href="/admin/orderList" class="btn btn-secondary">Reset</a>
        </form>
    </div>

    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Customer Name</th>
                    <th>Total Price</th>
                    <th>Status</th>
                    <th>Payment Method</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% if (orders && orders.length > 0) { %>
                    <% orders.forEach(order => { %>
                        <tr>
                            <td><%= order.orderId %></td>
                            <td><%= order.user && order.user.name ? order.user.name : 'N/A' %></td>
                            <td>â‚¹<%= order.finalAmound ? order.finalAmound.toFixed(2) : '0.00' %></td>
                            <td><%= order.status || 'N/A' %></td>
                            <td><%= order.payment || 'N/A' %></td>
                            <td>
                                <a href="/admin/orderDetailsAdmin?id=<%= order.orderId %>" class="btn-view">View</a>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="6" style="text-align: center; color: #7f8c8d; font-style: italic;">No orders found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <% if (totalPages > 1) { %>
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link <%= currentPage === 1 ? 'disabled' : '' %>" 
                       href="<%= currentPage > 1 ? `?page=${currentPage - 1}&search=${search || ''}&status=${status || ''}&payment=${payment || ''}&startDate=${startDate || ''}&endDate=${endDate || ''}` : '#' %>">
                        Previous
                    </a>
                </li>
                <li class="page-item">
                    <span class="page-current"><%= currentPage %> of <%= totalPages %></span>
                </li>
                <li class="page-item">
                    <a class="page-link <%= currentPage === totalPages ? 'disabled' : '' %>" 
                       href="<%= currentPage < totalPages ? `?page=${currentPage + 1}&search=${search || ''}&status=${status || ''}&payment=${payment || ''}&startDate=${startDate || ''}&endDate=${endDate || ''}` : '#' %>">
                        Next
                    </a>
                </li>
                <!-- <li class="page-item">
                    <a class="page-link <%= currentPage === totalPages ? 'disabled' : '' %>" 
                       href="<%= currentPage < totalPages ? `?page=${totalPages}&search=${search || ''}&status=${status || ''}&payment=${payment || ''}&startDate=${startDate || ''}&endDate=${endDate || ''}` : '#' %>">
                        Last
                    </a>
                </li> -->
            </ul>
        </nav>
    <% } %>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.js"></script>
<script>
$(document).ready(function () {
    $("#filterForm").on("submit", function (e) {
        e.preventDefault();
        const formData = $(this).serialize();
        window.location.href = "/admin/orderList?" + formData;
    });
});
</script>

<%- include("../../views/partials/admin/footer") %>